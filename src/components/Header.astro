---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

const { lang } = Astro.params

const { pathname } = Astro.url
const segments = pathname.split('/')
const currentLocale = segments[1] // مثلا 'fa' یا 'en'
const newLocale = currentLocale === 'fa' ? 'en' : 'fa'

// جایگزینی فقط زبان در URL
segments[1] = newLocale
const newPath = segments.join('/')

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header class="z-10">
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href={newPath}>
        {currentLocale === 'fa' ? 'English' : 'فارسی'}
      </a>
    </li>

    <li class="menu-item">
      <a href={`/${lang}`}>Home</a>
    </li>

    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Projects
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href=`/${lang}/messier`>Messier</a>
        </li>
      </ul>
    </li>
    <!-- <li class="menu-item highlight">
      <a href="https://accessible-astro.incluud.dev/">Docs </a>
    </li> -->
    <li class="menu-item type-icon animate-rotate">
      <a href="https://github.com/broccoliiiiiiiiiiiiii">
        <Icon name="lucide:github" />
        <span class="sr-only">Go to the GitHub page</span>
      </a>
    </li>
    <!-- <li class="menu-item type-icon animate-rotate"> -->
    <!-- <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode> -->
    <!-- </li> -->
    <DarkMode class="invisible" />
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
